{
  "main": "js/index",
  "typings": "js/index",
  "name": "@kondi/fast-skip",
  "version": "0.0.1",
  "description": "Skip an execution when it was already done for the current set of package dependencies",
  "license": "MIT",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git@github.com:kondi/fast-skip.git"
  },
  "bin": {
    "fast-skip": "./bin/fast-skip.js"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ]
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "tslint --project .",
    "test": "npm run lint && npm run format:check && jest",
    "watch:test": "jest --watch",
    "format:check": "prettier --list-different \"src/**/*.ts\"",
    "format:apply": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "mz": "^2.7.0",
    "npm-run": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/mz": "^2.7.0",
    "@types/node": "^12.12.28",
    "@types/npm-run": "^5.0.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-etc": "^1.10.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-misc-rules": "^3.5.1",
    "typescript": "^3.8.2",
    "typescript-tslint-plugin": "^0.5.5"
  }
}
